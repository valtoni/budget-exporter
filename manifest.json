{
  "manifest_version": 2,
  "name": "Budget Exporter",
  "description": "Detect bank pages and export to CSV.",
  "version": "1.2.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "budget-exporter@valtoni.github.io"
    }
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "browser_action": {
    "default_title": "Budget Exporter - GitHub",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  "page_action": {
    "default_title": "Exportar transações para CSV",
    "default_icon": {
      "32": "icons/page_action-32.png"
    },
    "show_matches": [
      "*://*.desjardins.com/comptes/courant/*",
      "*://*.desjardins.com/sommaire-perso/sommaire/sommaire-spa/CC/*",
      "*://*.koho.ca/transactions*"
    ]
  },
  "background": {
    "scripts": ["bank-utils.js", "storage-manager.js", "background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "tabs",
    "downloads",
    "*://*.desjardins.com/*",
    "*://*.koho.ca/*"
  ],
  "web_accessible_resources": [
    "bank-*.js",
    "desjardins-*.js"
  ],
  "options_ui": {
    "page": "manage.html",
    "open_in_tab": true
  },
  "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net 'wasm-unsafe-eval'; style-src 'self' https://cdn.jsdelivr.net; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "*://*.desjardins.com/*",
        "*://*.koho.ca/*"
      ],
      "js": ["bank-utils.js", "storage-manager.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}